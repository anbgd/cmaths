function [outputArg1] = secant_method(p)
eps = 0.001;
b = my_top(p);
a = b;
s1 = sign(b);
s2 = s1;
while (s1 == s2)
    a = a - 0.5;
    s2 = sign(a);
end
a;
while (abs(a-b) >= eps)
		a = b - (b - a) * gorner(p,b) / (gorner(p,b) - gorner(p,a));
		b = a - (a - b) * gorner(p,a) / (gorner(p,a) - gorner(p,b));
end
outputArg1 = b;
end